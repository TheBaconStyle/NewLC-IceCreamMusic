{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [".env"],
  "ui": "tui",
  "tasks": {
    "db#build": {
      "outputs": ["lib"]
    },
    "shared#build": {
      "dependsOn": ["db#build"],
      "outputs": ["lib"]
    },
    "build": {
      "with": ["db#build", "shared#build"],
      "outputs": [".next/**", "!.next/cache/**", "dist", "lib"]
    },
    "db#dev": {
      "cache": false,
      "persistent": true
    },
    "shared#dev": {
      "with": ["db#dev"],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "with": ["shared#dev"],
      "cache": false,
      "persistent": true
    }
  }
}
